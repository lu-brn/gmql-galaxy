<tool id="test_collections" name="Test Collections Management" version="0.1.0">
  <command>
    echo "A" > samples_S00001.gtf ;
    echo "B" > metadata_S00001.meta
  </command>
  <inputs>
    <param name="foo" type="text" label="Dummy Parameter" />
  </inputs>
  <outputs>
    <collection name="list_output" type="list" label="Simple List">
      <discover_datasets pattern="(?P&lt;designation&gt;.*)\.(?P&lt;ext&gt;[^\._]+)?" visible="true" />
    </collection>
  </outputs>
  <tests>
    <test>
      <param name="foo" value="bar" />
      <output_collection name="list_output" type="list">
          <element name="samples_S00001">
            <assert_contents>
              <has_text_matching expression="^A\n$" />
            </assert_contents>
          </element>
          <element name="metadata_S00001">
            <assert_contents>
              <has_text_matching expression="^B\n$" />
            </assert_contents>
          </element>
      </output_collection>
    </test>
  </tests>
</tool>